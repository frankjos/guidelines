<%= simple_form_for(@rule, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :title %>
    <%= f.input :description, :as => :ckeditor, :input_html => { :ckeditor => { :height => 400 } } %>
    <%= f.input :tag_list %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
